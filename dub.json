{
  "name": "spelunk",
  "authors": [ "Philip Pavlick <philip@swash.link>" ],
  "description": "Another open-source Roguelike",
  "copyright": "Copyright (c) 2016-2018, Philip Pavlick",
  "license": "The Spelunk! license",
  "targetType": "executable",

  "configurations":
  [
    {
      "name": "default",

      "dependencies":
      {
        "derelict-sdl2": "~>3.1.0-alpha.4"
      },

      "libs": [ "SDL2", "SDL2_ttf" ],

      "subConfigurations":
      {
        "derelict-sdl2": "derelict-sdl2-static"
      },

      "versions": ["sdl"]
    },
    {
      "name": "ncurses",

      "dependencies":
      {
        "ncurses": "~master",
        "derelict-sdl2": "~>3.1.0-alpha.4"
      },

      "libs": [ "SDL2", "SDL2_ttf" ],

      "subConfigurations":
      {
        "derelict-sdl2": "derelict-sdl2-static"
      },

      "versions": ["ncurses", "curses", "sdl"]
    },
    {
      "name": "pdcurses",
      "dependencies":
      {
        "pdcurses-d": "~>1.0.0",
        "derelict-sdl2": "~>3.1.0-alpha.4"
      },

      "libs": [ "SDL2", "SDL2_ttf" ],

      "subConfigurations":
      {
        "derelict-sdl2": "derelict-sdl2-static"
      },

      "versions": ["pdcurses", "curses", "sdl"]
    },
    {
      "name": "ncurses-nosdl",
      "dependencies":
      {
        "ncurses": "~master"
      },
      "versions": ["ncurses", "curses"]
    },
    {
      "name": "pdcurses-nosdl",
      "dependencies":
      {
        "pdcurses-d": "~>1.0.0"
      },
      "versions": ["pdcurses", "curses"]
    }
  ]
}
